{
  "name": "devicecontrol",
  "version": "1.5.4",
  "description": "Device Control Application",
  "email": "pesp@proyecciones.net",
  "main": "src/index.js",
  "scripts": {
    "dev": "electron --trace-warnings ./index.js --dev ",
    "prod": "electron --trace-warnings ./index.js ",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux --arm64",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": {
    "name": "Marcos D'Andrea",
    "email": "m.dandrea@proyecciones.net"
  },
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^32.1.0",
    "electron-builder": "^25.1.7",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dmxnet": "^0.9.0",
    "electron-store": "^10.0.0",
    "express": "^4.21.0",
    "ping": "^0.4.4",
    "pjlink-control": "^1.1.0",
    "socket.io": "^4.8.0",
    "version": "^0.1.2"
  },
  "build": {
    "appId": "com.proyecciones.devicecontrol",
    "productName": "Device Control",
    "directories": {
      "output": "dist"
    },
    "files": [
      "README.html",
      "src/**",
      "index.js",
      "!app/**",
      "!logs/*.log"
    ],
    "asar": true,
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
